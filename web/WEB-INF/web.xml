<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AdminToolsServlet</servlet-name>
        <servlet-class>Servlet.AdminToolsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MainPageServlet</servlet-name>
        <servlet-class>Servlet.MainPageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NieuwMeldingServlet</servlet-name>
        <servlet-class>Servlet.NieuwMeldingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OptiesServlet</servlet-name>
        <servlet-class>Servlet.OptiesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GesprekDetailServlet</servlet-name>
        <servlet-class>Servlet.GesprekDetailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NieuwGesprekServlet</servlet-name>
        <servlet-class>Servlet.NieuwGesprekServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NotificatieDetailServlet</servlet-name>
        <servlet-class>Servlet.NotificatieDetailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadFile</servlet-name>
        <servlet-class>Servlet.UploadFile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminToolsServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainPageServlet</servlet-name>
        <url-pattern>/Hoofdpagina</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NieuwMeldingServlet</servlet-name>
        <url-pattern>/MeldingAanmaken</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OptiesServlet</servlet-name>
        <url-pattern>/Opties</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GesprekDetailServlet</servlet-name>
        <url-pattern>/Gesprekken</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NieuwGesprekServlet</servlet-name>
        <url-pattern>/GesprekAanmaken</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NotificatieDetailServlet</servlet-name>
        <url-pattern>/Melding</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadFile</servlet-name>
        <url-pattern>/UploadFile</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
